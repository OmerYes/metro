
@model AdminUserVM

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Metro Yönetim Paneli</title>

    <!-- Custom fonts for this template-->
    <link href="~/Areas/Admin/CSS/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Areas/Admin/CSS/sb-admin-2.min.css" rel="stylesheet" />
    <script src='https://www.google.com/recaptcha/api.js'></script>
</head>
<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">
                                            <img src="~/img/logo.svg" />
                                        </h1>
                                    </div>
                                    @using (Html.BeginForm("Index", "AdminLogin", FormMethod.Post, new { @class = "user" }))
                                    {
                                        @Html.AntiForgeryToken()

                                        if (ViewBag.Message != null)
                                        {
                                            <div class="alert alert-danger">
                                                <strong>UYARIII!</strong>  @ViewBag.Message

                                            </div>
                                        }

                                        <div class="form-group">
                                            @Html.ValidationMessageFor(q => q.Email, null, new { @class = "text-danger" })
                                            @Html.TextBoxFor(q => q.Email, new { @class = "form-control form-control-user", @id = "exampleInputEmail", @placeholder = "Kullanıcı adınızı giriniz" })

                                        </div>
                                        <div class="form-group">
                                            @Html.ValidationMessageFor(q => q.Password, null, new { @class = "text-danger" })

                                            @Html.PasswordFor(q => q.Password, new { @class = "form-control form-control-user", @id = "exampleInputPassword", @placeholder = "Şifre" })
                                        </div>
                                        if (ViewBag.MessageRejcount != null)
                                        {
                                <div class="g-recaptcha" data-sitekey="6LdGPK8UAAAAAHbFVxjsL-NXf8dTq96izPL_F9wM"></div>
                                
                                        }



                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                            </div>
                                        </div>
                                        <button class="btn btn-user btn-primary btn-block" type="submit">Giriş</button>

                                    }


                                    <hr>
                                    <div class="text-center">

                                    </div>
                                    <div class="text-center">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="~/Areas/Admin/JS/jquery.min.js"></script>
    <script src="~/Areas/Admin/JS/bootstrap.bundle.min.js"></script>


    <!-- Core plugin JavaScript-->
    <script src="~/Areas/Admin/JS/jquery.easing.min.js"></script>


    <!-- Custom scripts for all pages-->
    <script src="~/Areas/Admin/JS/sb-admin-2.min.js"></script>


</body>

</html>
